@model Employee
<form action="/employee/edit" method="POST">
    <input type="hidden" asp-for="Id" />
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form>
                <div class="card-body">
                    <div class="col-md-6 form-group">
                    <label asp-for="FirstName">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                          <input asp-for="FirstName" class="form-control" type="text" required>      
                  </div>
                    <div class="col-md-6 form-group">
                    <label asp-for="LastName"> Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                          <input asp-for="LastName" class="form-control" type="text" required>      
                  </div>
                  <div class="col-md-6 form-group">
                    <label asp-for="Address"> Address</label>
                          <input asp-for="Address" rows= "2" class="form-control" type="text" required>      
                  </div>
                  <div class="col-md-6 form-group">
                    <label asp-for="Age"> Age</label>
                          <input  id="age" asp-for="Age" class="form-control" type="number" >      
                  </div>
                  <div class="col-md-6 form-group">
                    <label asp-for="Salary"> Salary</label>
                          <input asp-for="Salary" class="form-control" type="number" step="1000" >      
                  </div>
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Update</button>
                </div>
              </form>
            </div>
</form>            
            <!-- /.card -->